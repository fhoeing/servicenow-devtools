        <api_name>x_snc_devtools.GlideRecordDelete</api_name>
        <caller_access/>
        <client_callable>false</client_callable>
        <description>Executes the delete member function of a glide record in global scope.</description>
        <mobile_callable>false</mobile_callable>
        <name>GlideRecordDelete</name>
        <sandbox_callable>false</sandbox_callable>
        <script><![CDATA[function GlideRecordDelete(grRecord,bGhost)
{
	if (IsValidRecord(grRecord) == false)
	{
		return false;
	}
	bGhost = GetBoolValue(bGhost);

	var bResult = RunScriptInGlobalScope(
		'if (param2 == true)\n'
		+'{\n'
		+'   param1.setWorkflow(false);\n'
		+'   param1.autoSysFields(false);\n'
		+'}\n'
		+'result = param1.deleteRecord();\n'
		,grRecord,bGhost);

	return bResult;
}]]></script>
